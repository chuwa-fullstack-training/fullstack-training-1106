doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(
            rel="stylesheet",
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
            crossorigin="anonymous")
        script(
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous")
        style
            include ../public/style.css
        title Todo List 
    body
        div.container.width-600
            div.row
                div.col
                    h1 Todo List
            div.row
                div.col-md-8
                    input(name="todo" id="todo" class="form-control" placeholder="Enter todo")
                div.col-md-4.d-flex.align-items-center
                    button.btn.btn-primary.me-2(onclick="handleSubmit()") Add Todo
            div.margin-top-20
                each todo in todos
                    div.row
                        div.col-1
                            input(
                                type="checkbox"
                                name= todo.description
                                onchange="handleCheck(this)"
                                id= todo.description
                                checked= todo.done
                                data-id= todo._id
                                class="form-check-input todo-checkbox"
                            )

                        div.col
                            label(for= todo.description) #{todo.description}
            div.row
                div.col-auto
                    button.btn.btn-danger(onclick='handleDelete()') Delete
        script
            include ../public/main.js