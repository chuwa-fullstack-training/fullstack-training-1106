doctype html 
html(lang="en")
    head 
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Todo List 
        link(
            rel="stylesheet",
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
            crossorigin="anonymous")
        script(
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous")
        style 
            include ../public/style.css
    body 
        div.content
            div.title
                h1 Todo List
            div.textbox
                div.textbox-label
                    label(for='todo') Enter todo: 
                div.textbox-input
                    //- span.textbox-span
                    input(type='text' name='todo' id='todo' required)
                div.textbox-button
                    button(type='submit' onclick="handleSubmit()") Add
            div.todoList
                script. 
                    console.log('Todos:', !{JSON.stringify(todos)})
                each todo in todos
                    div.row
                        script. 
                            console.log('Todo:', !{JSON.stringify(todo)})
                        div.col-1
                            input(
                                type="checkbox"
                                name= todo.todo
                                onchange="handleCheck(this)"
                                id= todo.todo
                                checked= todo.finished
                                data-id= todo.id
                                class="form-check-input"
                            )
                        div.col
                            label(for= todo.todo) #{todo.todo}
        script 
            include ../public/main.js